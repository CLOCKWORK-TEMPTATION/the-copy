
@inject IJSRuntime JSRuntime

<div id="card-scanner" class="card-scanner-container">
    <div class="card">
        <div class="card-content">
            <p>This is a card.</p>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initCardScanner", "card-scanner");
        }
    }
}
